---
// 下载跳转页面 - 用于统计下载点击量
// Cloudflare Web Analytics 会记录此页面的访问量

// 获取下载来源参数
const source = Astro.url.searchParams.get('source');

// 下载链接映射
const downloadUrls: Record<string, string> = {
  github: 'https://github.com/phil-cheng/Exam2X-Pages/releases',
  lanzou: 'https://wwbub.lanzoup.com/b01883snyh',
};

// 获取目标 URL
const targetUrl = source && downloadUrls[source] ? downloadUrls[source] : null;

// 如果有有效的 source 参数，返回重定向响应
if (targetUrl) {
  return Astro.redirect(targetUrl, 302);
}
