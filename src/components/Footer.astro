---
// Footer - 页脚
import { Mail, Heart, Github } from 'lucide-astro';
import { t } from '../i18n/utils';
import type { Language } from '../i18n/utils';

interface Props {
  lang?: Language;
}

const { lang = 'zh' } = Astro.props;
---

<footer class="py-6 border-t border-neutral-200 dark:border-neutral-900">
  <div class="max-w-6xl mx-auto px-6">
    <div class="flex flex-col md:flex-row justify-between items-center gap-6">
      <!-- Logo 和名称 -->
      <div class="flex items-center gap-3">
        <img src="/logo.png" alt="Exam2X" class="w-10 h-10 rounded-lg object-cover" />
        <div>
          <h3 class="font-semibold text-neutral-900 dark:text-neutral-300">{t(lang, 'footerTitle')}</h3>
          <p class="text-sm text-neutral-600 dark:text-neutral-500">{t(lang, 'footerDesc')}</p>
        </div>
      </div>

      <!-- 社交链接 -->
      <div class="flex items-center gap-4">
        <a
          href="https://github.com/phil-cheng/Exam2X-Pages"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 text-sm text-neutral-600 dark:text-neutral-500 hover:text-neutral-900 dark:hover:text-neutral-300 transition-colors"
        >
          <Github class="w-4 h-4" />
          <span class="hidden sm:inline">GitHub</span>
        </a>
        <a href="#" class="flex items-center gap-2 text-sm text-neutral-600 dark:text-neutral-500 hover:text-neutral-900 dark:hover:text-neutral-300 transition-colors" title="WeChat: Gadd9-Chord">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M8.691 2.188C3.891 2.188 0 5.476 0 9.53c0 2.212 1.17 4.203 3.002 5.55a.59.59 0 0 1 .213.665l-.39 1.48c-.019.07-.048.141-.048.213 0 .163.13.295.29.295a.326.326 0 0 0 .167-.054l1.903-1.114a.864.864 0 0 1 .717-.098 10.16 10.16 0 0 0 2.837.403c.276 0 .543-.027.811-.05-.857-2.578.157-4.972 1.932-6.446 1.703-1.415 3.882-1.98 5.853-1.838-.576-3.583-4.196-6.348-8.596-6.348zM5.785 5.991c.642 0 1.162.529 1.162 1.18a1.17 1.17 0 0 1-1.162 1.178A1.17 1.17 0 0 1 4.623 7.17c0-.651.52-1.18 1.162-1.18zm5.813 0c.642 0 1.162.529 1.162 1.18a1.17 1.17 0 0 1-1.162 1.178 1.17 1.17 0 0 1-1.162-1.178c0-.651.52-1.18 1.162-1.18zm5.34 2.867c-1.797-.052-3.746.512-5.28 1.786-1.72 1.428-2.687 3.72-1.78 6.22.942 2.453 3.666 4.229 6.884 4.229.826 0 1.622-.12 2.361-.336a.722.722 0 0 1 .598.082l1.584.926a.272.272 0 0 0 .14.047c.134 0 .24-.111.24-.247 0-.06-.023-.12-.038-.177l-.327-1.233a.582.582 0 0 1-.023-.156.49.49 0 0 1 .201-.398C23.024 18.48 24 16.82 24 14.98c0-3.21-2.931-5.837-6.656-6.088V8.89l-.006-.033zm-2.634 3.37c.535 0 .969.44.969.982a.976.976 0 0 1-.969.983.976.976 0 0 1-.969-.983c0-.542.434-.982.97-.982zm4.844 0c.535 0 .969.44.969.982a.976.976 0 0 1-.969.983.976.976 0 0 1-.969-.983c0-.542.434-.982.97-.982z"/></svg>
          <span class="hidden sm:inline">WeChat</span>
        </a>
        <a href="mailto:565789229@qq.com" class="flex items-center gap-2 text-sm text-neutral-600 dark:text-neutral-500 hover:text-neutral-900 dark:hover:text-neutral-300 transition-colors">
          <Mail class="w-4 h-4" />
          <span class="hidden sm:inline">Email</span>
        </a>
      </div>
    </div>

    <!-- 分隔线 -->
    <div class="mt-4 pt-2 border-t border-neutral-200 dark:border-neutral-900/50 flex flex-col md:flex-row justify-center items-center gap-4 text-sm text-neutral-600 dark:text-neutral-500">
      {t(lang, 'footerCopyright')}
    </div>
  </div>
</footer>
