---
// Hero Section - 主视觉区域
import { Rocket, ArrowRight, Sparkles, Brain, Image, Shield, CheckCircle, ChevronDown } from 'lucide-astro';
import { t } from '../i18n/utils';
import type { Language } from '../i18n/utils';

interface Props {
  lang?: Language;
}

const { lang = 'zh' } = Astro.props;
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- 背景渐变效果 -->
  <div class="absolute inset-0 bg-gradient-to-b from-violet-600/10 via-white to-white dark:from-violet-600/20 dark:via-neutral-950 dark:to-neutral-950"></div>
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.15),rgba(255,255,255,0))] dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>

  <!-- 网格背景 -->
  <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808008_1px,transparent_1px),linear-gradient(to_bottom,#80808008_1px,transparent_1px)] dark:bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:24px_24px]"></div>

  <div class="relative z-10 max-w-6xl mx-auto px-6 py-24 text-center">
    <!-- 徽章标签 -->
    <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-neutral-100/50 dark:bg-neutral-900/50 border border-neutral-200 dark:border-neutral-800 text-sm text-neutral-600 dark:text-neutral-400 mb-8 backdrop-blur-sm">
      <span class="relative flex h-2 w-2">
        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
        <span class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"></span>
      </span>
      <span>{t(lang, 'heroBadge')}</span>
    </div>

    <!-- 主标题 -->
    <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold tracking-tight mb-6">
      <span class="bg-gradient-to-r from-neutral-900 via-neutral-700 to-neutral-500 dark:from-neutral-100 dark:via-neutral-200 dark:to-neutral-400 bg-clip-text text-transparent">
        {t(lang, 'heroTitle')}
      </span>
    </h1>

    <p class="text-xl md:text-2xl lg:text-3xl font-medium text-neutral-800 dark:text-neutral-300 mb-4">
      {t(lang, 'heroSubtitle')}
    </p>

    <p class="text-lg md:text-xl text-neutral-600 dark:text-neutral-500 max-w-3xl mx-auto mb-12 leading-relaxed">
      {t(lang, 'heroDesc1')}<br class="hidden md:block" />
      {t(lang, 'heroDesc2')}
    </p>

    <!-- CTA 按钮组 -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a
        href="#guide"
        class="group relative inline-flex items-center gap-2 px-8 py-4 bg-neutral-900 dark:bg-neutral-100 text-white dark:text-neutral-900 rounded-lg font-semibold hover:bg-neutral-800 dark:hover:bg-neutral-200 transition-all duration-200 shadow-[0_0_40px_-10px_rgba(0,0,0,0.1)] dark:shadow-[0_0_40px_-10px_rgba(255,255,255,0.3)] hover:shadow-[0_0_60px_-10px_rgba(0,0,0,0.15)] dark:hover:shadow-[0_0_60px_-10px_rgba(255,255,255,0.4)]"
      >
        <Rocket class="w-5 h-5" />
        {t(lang, 'heroCta1')}
        <ArrowRight class="w-4 h-4 group-hover:translate-x-1 transition-transform" />
      </a>
      <a
        href="#features"
        class="inline-flex items-center gap-2 px-8 py-4 bg-white/50 dark:bg-neutral-900/50 border border-neutral-300 dark:border-neutral-800 text-neutral-700 dark:text-neutral-300 rounded-lg font-medium hover:bg-neutral-100 dark:hover:bg-neutral-800/50 hover:border-neutral-400 dark:hover:border-neutral-700 transition-all duration-200 backdrop-blur-sm"
      >
        <Sparkles class="w-5 h-5" />
        {t(lang, 'heroCta2')}
      </a>
    </div>

    <!-- 核心优势标签 -->
    <div class="mt-16 flex flex-wrap justify-center gap-3">
      <span class="px-4 py-2 rounded-lg bg-white/80 dark:bg-neutral-900/50 border border-neutral-200 dark:border-neutral-800 text-neutral-700 dark:text-neutral-400 text-sm backdrop-blur-sm inline-flex items-center gap-2 shadow-sm">
        <Brain class="w-4 h-4" />
        {t(lang, 'heroFeature1')}
      </span>
      <span class="px-4 py-2 rounded-lg bg-white/80 dark:bg-neutral-900/50 border border-neutral-200 dark:border-neutral-800 text-neutral-700 dark:text-neutral-400 text-sm backdrop-blur-sm inline-flex items-center gap-2 shadow-sm">
        <Image class="w-4 h-4" />
        {t(lang, 'heroFeature2')}
      </span>
      <span class="px-4 py-2 rounded-lg bg-white/80 dark:bg-neutral-900/50 border border-neutral-200 dark:border-neutral-800 text-neutral-700 dark:text-neutral-400 text-sm backdrop-blur-sm inline-flex items-center gap-2 shadow-sm">
        <Shield class="w-4 h-4" />
        {t(lang, 'heroFeature3')}
      </span>
    </div>
  </div>

  <!-- 向下滚动提示 -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <ChevronDown class="w-6 h-6 text-neutral-400 dark:text-neutral-600" />
  </div>
</section>

<style>
  @keyframes ping {
    75%, 100% {
      transform: scale(2);
      opacity: 0;
    }
  }
  .animate-ping {
    animation: ping 1s cubic-bezier(0, 0, 0.2, 1) infinite;
  }
</style>
