---
// Features Section - 功能特性展示
import { Brain, Image, Shield, Scissors, CheckSquare, Sliders } from 'lucide-astro';
import { t } from '../i18n/utils';
import type { Language } from '../i18n/utils';

interface Props {
  lang?: Language;
}

const { lang = 'zh' } = Astro.props;
---

<section id="features" class="py-24 relative">
  <div class="max-w-6xl mx-auto px-6">
    <!-- 标题 -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">
        <span class="bg-gradient-to-r from-neutral-900 to-neutral-600 dark:from-neutral-100 dark:to-neutral-400 bg-clip-text text-transparent">
          {t(lang, 'featuresTitle')}
        </span>
      </h2>
      <p class="text-neutral-600 dark:text-neutral-500 text-lg max-w-2xl mx-auto">
        {t(lang, 'featuresDesc')}
      </p>
    </div>

    <!-- 功能网格 -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- 功能 1: AI 智能分拣 -->
      <div class="group relative overflow-hidden rounded-xl bg-white dark:bg-neutral-950 border border-neutral-200 dark:border-neutral-700 p-8 hover:border-blue-300 dark:hover:border-neutral-600 transition-all duration-300 shadow-sm hover:shadow-md">
        <div class="absolute inset-0 bg-gradient-to-br from-blue-600/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
        <div class="relative">
          <div class="w-14 h-14 rounded-xl bg-blue-50 dark:bg-blue-950/50 border border-blue-100 dark:border-blue-900/50 flex items-center justify-center mb-5 group-hover:scale-110 transition-transform">
            <Brain class="w-7 h-7 text-blue-600 dark:text-blue-400" />
          </div>
          <h3 class="text-xl font-semibold text-neutral-900 dark:text-neutral-100 mb-3">{t(lang, 'feat1Title')}</h3>
          <p class="text-neutral-600 dark:text-neutral-400 leading-relaxed">
            {t(lang, 'feat1Desc')}
          </p>
        </div>
      </div>

      <!-- 功能 2: 全媒体还原 -->
      <div class="group relative overflow-hidden rounded-xl bg-white dark:bg-neutral-950 border border-neutral-200 dark:border-neutral-700 p-8 hover:border-violet-300 dark:hover:border-neutral-600 transition-all duration-300 shadow-sm hover:shadow-md">
        <div class="absolute inset-0 bg-gradient-to-br from-violet-600/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
        <div class="relative">
          <div class="w-14 h-14 rounded-xl bg-violet-50 dark:bg-violet-950/50 border border-violet-100 dark:border-violet-900/50 flex items-center justify-center mb-5 group-hover:scale-110 transition-transform">
            <Image class="w-7 h-7 text-violet-600 dark:text-violet-400" />
          </div>
          <h3 class="text-xl font-semibold text-neutral-900 dark:text-neutral-100 mb-3">{t(lang, 'feat2Title')}</h3>
          <p class="text-neutral-600 dark:text-neutral-400 leading-relaxed">
            {t(lang, 'feat2Desc')}
          </p>
        </div>
      </div>

      <!-- 功能 3: 本地私有化 -->
      <div class="group relative overflow-hidden rounded-xl bg-white dark:bg-neutral-950 border border-neutral-200 dark:border-neutral-700 p-8 hover:border-emerald-300 dark:hover:border-neutral-600 transition-all duration-300 shadow-sm hover:shadow-md">
        <div class="absolute inset-0 bg-gradient-to-br from-emerald-600/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
        <div class="relative">
          <div class="w-14 h-14 rounded-xl bg-emerald-50 dark:bg-emerald-950/50 border border-emerald-100 dark:border-emerald-900/50 flex items-center justify-center mb-5 group-hover:scale-110 transition-transform">
            <Shield class="w-7 h-7 text-emerald-600 dark:text-emerald-400" />
          </div>
          <h3 class="text-xl font-semibold text-neutral-900 dark:text-neutral-100 mb-3">{t(lang, 'feat3Title')}</h3>
          <p class="text-neutral-600 dark:text-neutral-400 leading-relaxed">
            {t(lang, 'feat3Desc')}
          </p>
        </div>
      </div>

      <!-- 功能 4: 智能切片 -->
      <div class="group relative overflow-hidden rounded-xl bg-white dark:bg-neutral-950 border border-neutral-200 dark:border-neutral-700 p-8 hover:border-amber-300 dark:hover:border-neutral-600 transition-all duration-300 shadow-sm hover:shadow-md">
        <div class="absolute inset-0 bg-gradient-to-br from-amber-600/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
        <div class="relative">
          <div class="w-14 h-14 rounded-xl bg-amber-50 dark:bg-amber-950/50 border border-amber-100 dark:border-amber-900/50 flex items-center justify-center mb-5 group-hover:scale-110 transition-transform">
            <Scissors class="w-7 h-7 text-amber-600 dark:text-amber-400" />
          </div>
          <h3 class="text-xl font-semibold text-neutral-900 dark:text-neutral-100 mb-3">{t(lang, 'feat4Title')}</h3>
          <p class="text-neutral-600 dark:text-neutral-400 leading-relaxed">
            {t(lang, 'feat4Desc')}
          </p>
        </div>
      </div>

      <!-- 功能 5: 质量检查 -->
      <div class="group relative overflow-hidden rounded-xl bg-white dark:bg-neutral-950 border border-neutral-200 dark:border-neutral-700 p-8 hover:border-rose-300 dark:hover:border-neutral-600 transition-all duration-300 shadow-sm hover:shadow-md">
        <div class="absolute inset-0 bg-gradient-to-br from-rose-600/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
        <div class="relative">
          <div class="w-14 h-14 rounded-xl bg-rose-50 dark:bg-rose-950/50 border border-rose-100 dark:border-rose-900/50 flex items-center justify-center mb-5 group-hover:scale-110 transition-transform">
            <CheckSquare class="w-7 h-7 text-rose-600 dark:text-rose-400" />
          </div>
          <h3 class="text-xl font-semibold text-neutral-900 dark:text-neutral-100 mb-3">{t(lang, 'feat5Title')}</h3>
          <p class="text-neutral-600 dark:text-neutral-400 leading-relaxed">
            {t(lang, 'feat5Desc')}
          </p>
        </div>
      </div>

      <!-- 功能 6: 灵活配置 -->
      <div class="group relative overflow-hidden rounded-xl bg-white dark:bg-neutral-950 border border-neutral-200 dark:border-neutral-700 p-8 hover:border-cyan-300 dark:hover:border-neutral-600 transition-all duration-300 shadow-sm hover:shadow-md">
        <div class="absolute inset-0 bg-gradient-to-br from-cyan-600/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
        <div class="relative">
          <div class="w-14 h-14 rounded-xl bg-cyan-50 dark:bg-cyan-950/50 border border-cyan-100 dark:border-cyan-900/50 flex items-center justify-center mb-5 group-hover:scale-110 transition-transform">
            <Sliders class="w-7 h-7 text-cyan-600 dark:text-cyan-400" />
          </div>
          <h3 class="text-xl font-semibold text-neutral-900 dark:text-neutral-100 mb-3">{t(lang, 'feat6Title')}</h3>
          <p class="text-neutral-600 dark:text-neutral-400 leading-relaxed">
            {t(lang, 'feat6Desc')}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
